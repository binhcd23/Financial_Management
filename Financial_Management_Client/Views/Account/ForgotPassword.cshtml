@model Financial_Management_Server.DTOs.ForgotPasswordRequestDto
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card auth-card">
    <h2 class="card-title">Quên mật khẩu</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="ForgotPassword" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-input" placeholder="Nhập email của bạn" type="email" required />
            <span asp-validation-for="Email" class="field-error"></span>
        </div>

        <button class="btn-primary" type="submit">GỬI MÃ OTP</button>

        <p class="login">Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
    </form>
</div>
