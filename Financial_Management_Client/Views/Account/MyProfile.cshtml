@model Financial_Management_Server.DTOs.UserDto;
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/profile.css" rel="stylesheet" asp-append-version="true" />
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-radius-xl text-center p-4">
                <div class="position-relative d-inline-block mx-auto">
                    <img src="~/img/default-avatar.png" class="avatar avatar-xxl shadow-lg border-radius-section" alt="profile_image">
                </div>
                <div class="mt-4">
                    <h5 class="font-weight-bold text-dark mb-1">@(Model?.FullName ?? "N/A")</h5>
                </div>
            </div>

            <div class="card shadow-sm border-radius-xl mt-4">
                <div class="card-body p-3 text-center">
                    <h6 class="font-weight-bold text-dark mb-3">Bảo mật tài khoản</h6>
                    <button type="button" class="btn bg-gradient-dark btn-sm w-100 mb-0 font-weight-bold" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        <i class="fa-solid fa-key me-2"></i> Đổi mật khẩu
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h5 class="mb-0 font-weight-bold text-dark">Thông tin cá nhân</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <form asp-action="UpdateProfile" method="post">
                  
                        <div asp-validation-summary="ModelOnly" class="text-danger text-sm mt-2"></div>

                        <input type="hidden" asp-for="UserId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label font-weight-bold text-dark text-xs text-uppercase opacity-7">Tên đăng nhập</label>
                                    <input asp-for="UserName" class="form-control form-control-sm font-weight-bold" type="text">
                                    <span asp-validation-for="UserName" class="text-danger text-xs"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label font-weight-bold text-dark text-xs text-uppercase opacity-7">Họ và Tên</label>
                                    <input asp-for="FullName" class="form-control form-control-sm font-weight-bold" type="text">
                                    <span asp-validation-for="FullName" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label font-weight-bold text-dark text-xs text-uppercase opacity-7">Địa chỉ Email</label>
                                    <input asp-for="Email" class="form-control form-control-sm font-weight-bold" type="email" readonly>
                                    <span asp-validation-for="Email" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>
                       
                        <div class="text-end mt-4">
                            <button type="submit" class="btn bg-gradient-primary btn-sm mb-0 font-weight-bold px-4">Cập nhật thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-radius-xl">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title font-weight-bold text-dark">Đổi mật khẩu mới</h5>
                <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="changePasswordForm" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-sm mb-3"></div>

                    <input type="hidden" name="UserId" value="@Model?.UserId" />
                    <div class="mb-3">
                        <label class="form-label font-weight-bold text-dark">Mật khẩu hiện tại</label>
                        <input type="password" name="CurrentPassword" class="form-control form-control-sm font-weight-bold" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label font-weight-bold text-dark">Mật khẩu mới</label>
                        <input type="password" name="NewPassword" class="form-control form-control-sm font-weight-bold" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-link text-secondary mb-0 font-weight-bold" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" form="changePasswordForm" class="btn bg-gradient-dark btn-sm mb-0 font-weight-bold">Lưu mật khẩu</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        window.flashMessages = {
            success: '@Html.Raw(TempData["SuccessMessage"] ?? "")',
            error: '@Html.Raw(TempData["ErrorMessage"] ?? "")',
            isPasswordModalInvalid: @(ViewData["IsPasswordError"] != null && !ViewData.ModelState.IsValid ? "true" : "false")
                    };
    </script>
    <script src="~/js/profile.js" asp-append-version="true"></script>
}