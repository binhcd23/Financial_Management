@model Financial_Management_Server.DTOs.Finances.DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var now = DateTime.Now;
    var firstDayOfMonth = new DateTime(now.Year, now.Month, 1).ToString("yyyy-MM-dd");
    var lastDayOfMonth = new DateTime(now.Year, now.Month, 1).AddMonths(1).AddDays(-1).ToString("yyyy-MM-dd");
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="font-weight-bolder">Tổng quan tài chính</h3>
        </div>
    </div>

    @* --- Phần Card Thống Kê --- *@
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-coins opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Khoản thu</p>
                        <h4 class="mb-0">@Model.IncomeValue.ToString("N0") VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm">Với @Model.IncomeTransactions giao dịch</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-danger shadow-danger text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-cart-shopping opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Khoản chi</p>
                        <h4 class="mb-0">@Model.ExpensesValue.ToString("N0") VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm">Với @Model.ExpensesTransactions giao dịch</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-warning shadow-warning text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-bullseye opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tiến độ chung</p>
                        <h4 class="mb-0">@Model.OverallGoalProgress%</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm">Của @Model.ActiveGoalsCount mục tiêu đang chạy</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-piggy-bank opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tổng tiết kiệm</p>
                        <h4 class="mb-0">@Model.SavingValue.ToString("N0") VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm">Trong tất cả ví tiết kiệm</p>
                </div>
            </div>
        </div>
    </div>

    @* --- Phần Biểu Đồ --- *@
    <div class="row mt-4">
        <div class="col-lg-8 mb-4">
            <div class="card z-index-2 shadow-sm">
                <div class="card-header pb-0 pt-3 bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-capitalize mb-0">Phân tích chi tiêu theo hạng mục</h6>

                        <form asp-action="DashboardFilter" method="post" class="d-flex align-items-center bg-gray-100 border-radius-lg p-2">
                            <div class="d-flex align-items-center me-3">
                                <span class="text-xs font-weight-bold me-2">Từ:</span>
                                <input type="date" id="startDate" name="startDate" class="form-control form-control-sm border-0 bg-transparent"
                                       value="@(ViewBag.CurrentFilter?.startDate?.ToString("yyyy-MM-dd") ?? firstDayOfMonth)" style="max-width: 130px;">
                            </div>

                            <div class="d-flex align-items-center me-3">
                                <span class="text-xs font-weight-bold me-2">Đến:</span>
                                <input type="date" id="endDate" name="endDate" class="form-control form-control-sm border-0 bg-transparent"
                                       value="@(ViewBag.CurrentFilter?.endDate?.ToString("yyyy-MM-dd") ?? lastDayOfMonth)" style="max-width: 130px;">
                            </div>

                            <button type="submit" class="btn btn-sm bg-gradient-dark mb-0 px-3 py-1">
                                <i class="fas fa-filter me-1 text-xs"></i> Lọc
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="expenseBarChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Mục tiêu (%)</h6>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="goalPieChart" height="250"></canvas>
                    </div>
                    <ul class="list-group mt-3">
                        @foreach (var item in Model.Goals)
                        {
                            <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                <div class="d-flex align-items-center">
                                    <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                                        <i class="fa-solid fa-tag text-white opacity-10"></i>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-1 text-dark text-sm">@item.Status</h6>
                                        <span class="text-xs">@item.GoalsCount mục tiêu</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center text-dark text-sm font-weight-bold">
                                    @item.Percentage%
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Khởi tạo dữ liệu từ Razor sang Global Variable
        window.chartData = {
            categoryLabels: @Html.Raw(Json.Serialize(Model.Categories.Select(c => c.CategoryName))),
            categoryValues: @Html.Raw(Json.Serialize(Model.Categories.Select(c => c.TotalAmount))),
            goalLabels: @Html.Raw(Json.Serialize(Model.Goals.Select(g => g.Status))),
            goalValues: @Html.Raw(Json.Serialize(Model.Goals.Select(g => g.Percentage)))
                };
    </script>
    <script src="~/js/category_stats.js" asp-append-version="true"></script>
}