@model Financial_Management_Server.DTOs.Finances.DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="font-weight-bolder">Tổng quan tài chính</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-coins opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tiền túi</p>
                        <h4 class="mb-0">TotalIncome VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm"></p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-danger shadow-danger text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-cart-shopping opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tiền chi (Thàng này)</p>
                        <h4 class="mb-0">TotalExpense VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm">
                        
                        <span class="text-danger font-weight-bolder">
                            <i class="fa fa-arrow-up"></i> + bao nhiêu %
                        </span>
                        <span> tăng so với tháng trước</span>

                        <span class="text-success font-weight-bolder">
                            <i class="fa fa-arrow-down"></i> bao nhiêu %
                        </span>
                        <span> giảm so với tháng trước</span>

                        <span class="text-dark font-weight-bolder">0%</span>
                        <span> không thay đổi so với tháng trước</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-warning shadow-warning text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-receipt opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tiền thuế (Tháng này)</p>
                        <h4 class="mb-0">TotalTax VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm"><span class="text-danger font-weight-bolder">nếu thàng trước chưa chuyển thì nó sẽ hiện thông báo ở đây </span>ngân sách đã dùng</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-radius-xl">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                        <i class="fa-solid fa-piggy-bank opacity-10"></i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Tiền tiết kiệm</p>
                        <h4 class="mb-0">TotalSavings VNĐ</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3">
                    <p class="mb-0 text-sm"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-8 mb-4">
            <div class="card z-index-2 shadow-sm">
                <div class="card-header pb-0 pt-3 bg-transparent">
                    <h6 class="text-capitalize">Phân tích chi tiêu theo hạng mục</h6>
                    <p class="text-sm mb-0">
                        <i class="fa fa-arrow-up text-success"></i>
                        Tháng này
                    </p>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="expenseBarChart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Top 5 chi tiêu nhiều nhất</h6>
                </div>
                <div class="card-body p-3">
                    <ul class="list-group">
                      
                            <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                <div class="d-flex align-items-center">
                                    <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                                        <i class="fa-solid fa-minus text-white opacity-10"></i>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-1 text-dark text-sm">CategoryName</h6>
                                        <span class="text-xs"> giao dịch</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold">
                                    -0 VNĐ
                                </div>
                            </li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>