@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Tài Chính Cá Nhân";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FinTrack</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

</head>
<body class="auth">
    <main class="auth-hero">
        <div class="auth-hero-inner" style="display: flex; min-height: 100vh; align-items: center; justify-content: center; padding: 20px;">
            <div class="auth-container" style="display: flex; background: white; border-radius: 24px; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.1); overflow: hidden; max-width: 1000px; width: 100%;">

                <section class="hero-left" style="flex: 1; background: #0f172a; color: white; padding: 60px; display: flex; flex-direction: column; justify-content: center; position: relative;">
                    <div style="position: absolute; top: 40px; left: 40px;">
                        <span class="brand-text-logo">FinTrack.</span>
                    </div>
                    <h1 style="font-size: 36px; line-height: 1.2; margin-bottom: 20px;">Làm chủ dòng tiền của bạn.</h1>
                    <p style="color: #94a3b8; font-size: 18px;">Giải pháp quản lý chi tiêu thông minh.</p>

                </section>

                <section class="hero-right" style="flex: 1; padding: 60px; background: white;">
                    @RenderBody()
                </section>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>