@using System.Text.Json
@using Financial_Management_Server.DTOs.Notifications
@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
    var fullName = Context.Session.GetString("FullName");
    var notifJson = Context.Session.GetString("UserNotifications");
    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
    var notifications = string.IsNullOrEmpty(notifJson)
        ? new List<NotificationDto>()
        : JsonSerializer.Deserialize<List<NotificationDto>>(notifJson, options);
    var unreadCount = notifications?.Count(n => n.IsRead == false);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/material-dashboard.css" rel="stylesheet" />
    <link href="~/css/manager.css" rel="stylesheet" />
</head>

<body class="g-sidenav-show bg-gray-100">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-white" id="sidenav-main">
        <div class="sidenav-header" style="height: auto !important;">
            <a class="navbar-brand m-0" href="#" style="white-space: normal; height: auto;">
                <i class="fa-solid fa-cube text-primary me-2"></i>
                <span class="d-block text-xs opacity-6">Xin chào,</span>
                <span class="font-weight-bold">@fullName</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark @(currentAction == "dashboard" ? "active-menu-item" : "")" asp-controller="Finance" asp-action="Dashboard">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-house"></i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark @(currentAction == "billing" ? "active-menu-item" : "")" asp-controller="Finance" asp-action="Billing">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-credit-card"></i>
                        </div>
                        <span class="nav-link-text ms-1">Billing</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark @(currentAction == "goals" ? "active-menu-item" : "")" asp-controller="Finance" asp-action="Goals">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-bullseye"></i>
                        </div>
                        <span class="nav-link-text ms-1">Goals</span>
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">ACCOUNT PAGES</h6>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark @(currentAction == "myprofile" ? "active-menu-item" : "")" asp-controller="Account" asp-action="MyProfile">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <span class="nav-link-text ms-1">Profile</span>
                    </a>
                </li>

                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <a class="nav-link text-dark" href="javascript:;" onclick="document.getElementById('logoutForm').submit();">
                            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-sign-out-alt text-danger"></i>
                            </div>
                            <span class="nav-link-text ms-1">Logout</span>
                        </a>
                    </form>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3 d-flex justify-content-end" style="margin-top: 20px;">
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item dropdown pe-2 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="position-relative">
                                <i class="fa fa-bell cursor-pointer" style="font-size: 1.5rem;"></i>
                                @if (unreadCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="padding: 3px; border: 2px solid #fff;">
                                        <span class="visually-hidden">New alerts</span>
                                    </span>
                                }
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end px-2 py-3 me-sm-n4" style="max-height: 350px; overflow-y: auto;" aria-labelledby="dropdownMenuButton">
                            @if (notifications != null && notifications.Any())
                            {
                                @foreach (var item in notifications)
                                {
                                    <li class="mb-2">
                                        <a class="dropdown-item border-radius-md" href="javascript:;" onclick="showNotificationDetail(@item.NotificationId)">
                                            <div class="d-flex py-1">
                                                <div class="my-auto">
                                                    <i class="fa-solid @(item.Type == "Warning" ? "fa-triangle-exclamation text-warning" : "fa-envelope text-primary") me-3"></i>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="text-sm font-weight-normal mb-1">
                                                        <span class="font-weight-bold">@item.Title</span>
                                                    </h6>
                                                    <p class="text-xs text-secondary mb-0">
                                                        <i class="fa fa-clock me-1"></i> @item.TimeAgo
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="text-center p-2">
                                    <p class="text-xs mb-0">Không có thông báo mới</p>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="modal fade" id="notifModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="notifTitle">Tiêu đề</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="notifMessage">Nội dung thông báo đang tải...</p>
                        <small class="text-secondary" id="notifTime"></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/notif.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>